---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}

const { date, title, description, link } = Astro.props;
---

<div class="absolute w-3 h-3 bg-yellow-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-yellow-400 z-10"></div>

<div class="grid md:grid-cols-5 md:gap-10 md:space-x-4">
  <div class="relative pb-2 md:col-span-2">
    <h3 class="text-xl font-bold text-yellow-400 dark:text-yellow-200">
      {title}
    </h3>
    <time class="p-0 m-0 text-sm leading-none text-gray-600/80 dark:text-white/80">{date}</time>
  </div>

  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    <p class="mb-4 text-base font-normal text-pretty">
      {description}
    </p>
    
    {
      link && (
        <a
          href={link}
          class="inline-flex items-center text-lg font-medium text-yellow-400/90 dark:text-yellow-200/90 hover:text-yellow-500 dark:hover:text-yellow-300 transition-colors duration-300 no-underline"
        >
          Saber m√°s...{" "}
          <svg
            class="w-4 h-4 ms-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 5l7 7-7 7M5 12h14"
            />
          </svg>
        </a>
      )
    }
  </div>
</div>