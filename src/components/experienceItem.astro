---
import es from "../i18n/es.json";
interface Props {
  dateKey: string;
  titleKey: string;
  title2Key?: string;
  descriptionKey: string;
  link?: string;
  ctaKey?: string;
}

const {
  dateKey,
  titleKey,
  title2Key,
  descriptionKey,
  link,
  ctaKey = "exp_more",
} = Astro.props;

const fb = (key?: string) => {
  if (!key) return "";
  return (es as Record<string, string>)[key] ?? "";
};
---

<div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4">
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <!-- Punto amarillo -->
      <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl">•</span>
      
      <!-- Título principal -->
      <h3 class="text-xl font-bold text-yellow-400 dark:text-yellow-400" data-i18n={titleKey}>
        {fb(titleKey)}
      </h3>

      <!-- Empresa -->
      {title2Key && (
        <h4 class="font-semibold text-xl text-gray-600 dark:text-white" data-i18n={title2Key}>
          {fb(title2Key)}
        </h4>
      )}

      <!-- Fecha -->
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80" data-i18n={dateKey}>
        {fb(dateKey)}
      </time>
    </div>
  </div>

  <!-- Contenido derecho -->
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    <p class="text-base font-normal text-pretty" data-i18n={descriptionKey}>
      {fb(descriptionKey)}
    </p>

    {link && (
      <a
        href={link}
        role="link"
        class="inline-flex items-center text-lg font-medium text-yellow-500 dark:text-yellow-200 dark:hover:text-yellow-300 hover:text-yellow-700 transition-colors duration-300 no-underline w-fit"
      >
        <span data-i18n={ctaKey}>{fb(ctaKey) || "Saber más..."}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 icon icon-tabler icon-tabler-chevron-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M9 6l6 6l-6 6"></path>
        </svg>
      </a>
    )}
  </div>
</div>

<style>
  .sticky {
    position: sticky;
    top: 0;
  }
</style>